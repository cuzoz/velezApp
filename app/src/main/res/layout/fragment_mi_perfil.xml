<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/miPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MiPerfilFragment">

    <TextView
        android:id="@+id/miPerfilTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_perfil_name"
        android:textColor="@color/velez"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/btnMiPerfilToCarnet"
        android:layout_width="115dp"
        android:layout_height="130dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="#F1F3F4"
        android:text="@string/carnet"
        android:textColor="#263238"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/carnet"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMiPerfilToMisEntradas"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnMiPerfilToMisEntradas"
        android:layout_width="115dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#F1F3F4"
        android:text="@string/mis_entradas"
        android:textColor="#263238"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/ticket_icon"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/btnMiPerfilToTiendaVirtual"
        app:layout_constraintEnd_toStartOf="@+id/btnMiPerfilToCarnet"
        app:layout_constraintStart_toEndOf="@+id/btnMiPerfilToHaceteSocio"
        app:layout_constraintTop_toBottomOf="@+id/miPerfilTitle"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnMiPerfilToHaceteSocio"
        android:layout_width="115dp"
        android:layout_height="130dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="#F1F3F4"
        android:text="@string/hacete_socio"
        android:textColor="#263238"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/handshake"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toStartOf="@+id/btnMiPerfilToMisEntradas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck,TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnMiPerfilToMisPagos"
        android:layout_width="115dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F1F3F4"
        android:text="@string/mis_pagos"
        android:textColor="#263238"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/pay_icon"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toStartOf="@+id/btnMiPerfilToTiendaVirtual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMiPerfilToHaceteSocio"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnMiPerfilToTiendaVirtual"
        android:layout_width="115dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F1F3F4"
        android:text="@string/tienda_virtual"
        android:textColor="#263238"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/bag_icon"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toStartOf="@+id/btnMiPerfilToInstagram"
        app:layout_constraintStart_toEndOf="@+id/btnMiPerfilToMisPagos"
        app:layout_constraintTop_toBottomOf="@+id/btnMiPerfilToMisEntradas"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnMiPerfilToInstagram"
        android:layout_width="115dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F1F3F4"
        android:text="@string/Instagram"
        android:textColor="#263238"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/instagram_icon"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMiPerfilToTiendaVirtual"
        app:layout_constraintTop_toBottomOf="@+id/btnMiPerfilToCarnet"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnMiPerfilToComprarEntrada"
        android:layout_width="115dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F1F3F4"
        android:text="@string/comprar_entrada"
        android:textColor="#263238"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/stadium_icon"
        app:iconGravity="top"
        app:iconSize="60sp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toStartOf="@+id/btnMiPerfilToCerrarSesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMiPerfilToMisPagos"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnMiPerfilToCerrarSesion"
        android:layout_width="115dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F1F3F4"
        android:text="@string/cerrar_sesion"
        android:textColor="#263238"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/sign_out_icon"
        app:iconGravity="top"
        app:iconSize="60sp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toStartOf="@+id/btnMiPerfilToInfoYNovedades"
        app:layout_constraintStart_toEndOf="@+id/btnMiPerfilToComprarEntrada"
        app:layout_constraintTop_toBottomOf="@+id/btnMiPerfilToTiendaVirtual"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnMiPerfilToInfoYNovedades"
        android:layout_width="115dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F1F3F4"
        android:text="@string/info_novedades"
        android:textColor="#263238"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/info_icon"
        app:iconGravity="top"
        app:iconSize="60sp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMiPerfilToCerrarSesion"
        app:layout_constraintTop_toBottomOf="@+id/btnMiPerfilToInstagram"
        tools:ignore="TextContrastCheck,TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>